{
    "name": "vakata/asn1",
    "description": "An ASN1 encoder / decoder",
    "keywords": [
        "vakata",
        "asn1"
    ],
    "homepage": "https://github.com/vakata/asn1",
    "license": "MIT",
    "authors": [
        {
            "name": "vakata",
            "email": "github@vakata.com",
            "homepage": "http://www.vakata.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=8.0.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "6.*",
        "victorjonsson/markdowndocs": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "vakata\\asn1\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "vakata\\asn1\\test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "psr2": "php-cs-fixer fix ./src",
        "phpdoc": "phpdoc-md generate src > api.md"
    }
}
